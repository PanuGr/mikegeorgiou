<style>
    hr {
        width: 70vw;
        margin: auto;
    }
    h1 {
        margin: 4rem auto 0;
        text-align: center;
    }
    main {
        display: grid;
        justify-content: center;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 3rem;
        margin-block-start: 4rem;
        svg {
            margin-block-end: 1rem;
        }
        h2 {
            margin-block-start: 1rem;
        }
    }
    p {
        text-align: justify;
    }
    img {
        border-radius: 50%;
    }
</style>

